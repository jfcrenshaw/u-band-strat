# Enforce a non-interactive backend
backend: agg

# set font to match LaTeX's Computer Modern
font.family: serif
font.serif: cmr10
mathtext.fontset: cm
axes.formatter.use_mathtext: True # needed when using cm=cmr10 for normal text

# set font sizes
font.size: 9
axes.titlesize: 9
legend.fontsize: 9
axes.labelsize: 9
xtick.labelsize: 8
ytick.labelsize: 8

# Set plot linewidth
lines.linewidth: 1